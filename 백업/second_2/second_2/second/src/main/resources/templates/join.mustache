<!doctype html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="jquery-3.6.1.min.js"></script>

    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="join.css">
    <title>join</title>
</head>
<body>

<section class="join_form">
    <h1>회원가입</h1>
    <form action="/join/create" method="post">
        <div class="input-group mb-3">
            <!--이름 입력-->
            <label for="name_id">성명</label>
            <input type="text" class="form-control" id="name_id" placeholder="이름" name="name" aria-label="Recipient's username"
                   aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <!--ID 입력-->
            <label for="id_id">ID</label>
            <input type="text" class="form-control" id="id_id" placeholder="ID" name="id" aria-label="Recipient's username"
                   aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <!--PW 입력-->
            <label for="id_pw">PW</label>
            <input type="password" class="form-control" id="id_pw" placeholder="PW" name="password" aria-label="Recipient's username"
                   aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <!--나이-->
            <label for="age_id">나이</label>
            <input type="text" class="form-control" id="age_id" placeholder="나이" name="age" aria-label="Recipient's username"
                   aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <!--생년월일-->
            <label for="age_id">생년월일</label>
            <input type="text" class="form-control" id="age_id" placeholder="생년월일(6자리)" name="birth" maxlength="6"
                   aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <!--키-->
            <label for="height_id">키</label>
            <input type="text" class="form-control" id="height_id" placeholder="키(cm)" name="height"
                   aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group mb-3">
            <!--몸무게-->
            <label for="weight_id">몸무게</label>
            <input type="text" class="form-control" id="weight_id" placeholder="몸무게(kg)" name="weight"
                   aria-label="Recipient's username" aria-describedby="button-addon2">
        </div>

        <div class="input-group">
            <!--성별-->
            <label for="join_sex">성별</label>
            <select class="form-select" id="join_sex" aria-label="Default select example" name="sex">
                <option selected value="0">남성</option>
                <option value="1">여성</option>
            </select>
        </div>

        <div class="join_btn">
            <input class="btn btn-primary" id="join" type="submit" value="완료">
        </div>

        <div class="pw_btn">
            <button class="btn btn-primary"><a href="home">돌아가기</a></button>
        </div>
    </form>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>
</html>