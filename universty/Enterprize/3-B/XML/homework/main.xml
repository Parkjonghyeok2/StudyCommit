<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="stdInfo" class="homework.StdInfo">
		<constructor-arg value="John Doe" />
		<constructor-arg value="1234" />
	</bean>
		
		
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"> <!-- 외부 프로퍼티 값을 할당받기 위해 필수 선언해야하는 스프링 클래스 -->
		<property name="locations">
			<value>file:XML/homework/num.properties</value>
		</property>
	</bean>
	
	
	
	<bean id="stdManager" class="homework.StdManager"
		destroy-method="outputStudentInfo">
		<!-- DI를 통한 StdInfo 주입 -->
		<property name="stdInfo" ref="stdInfo" />	
		<!-- 외부 프로퍼티 값을 이용한 입력 받을 학생 수 -->
		<property name="numStudents" value="${numStudents}" />
	</bean>

</beans>
