<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">


	<bean id="stdBook" class="homework3.BookDao" scope="prototype"/>
	<bean id="aspectId" class="homework3.Book" />
	<bean id="list" class="java.util.LinkedList" />
	<bean id="BookManag" class="homework3.BookAdvice">
		<constructor-arg>
			<ref bean="list" />
		</constructor-arg>
	</bean>

	<aop:config>
		<aop:aspect id="aspect" ref="aspectId">
			<aop:pointcut id="pointcut1"
				expression="execution(* homework3.BookManager.*())" />
			<aop:before pointcut-ref="pointcut1" method="log" />
			<aop:after-returning pointcut-ref="pointcut1"
				method="printBookList" returning="blist" />
		</aop:aspect>
	</aop:config>
</beans>
