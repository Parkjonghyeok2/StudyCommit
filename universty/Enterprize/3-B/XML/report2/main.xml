<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<aop:aspectj-autoproxy />
	<bean id="mainObj" class="report2.Report2" />
	<bean id="menu" class="report2.MenuObj" />

	<!-- Advice 메서드를 포함하는 클래스를 빈으로 등록 -->
	<bean name="advice" class="report2.BookAdvice"
		destroy-method="logClose">
		<constructor-arg>
			<value>log.txt</value>
		</constructor-arg>
	</bean>
	
	
	<bean id="list" class="java.util.LinkedList" />
	<bean id="book" class="report2.Book" scope="prototype" />

	<bean id="bookMng" class="report2.BookManager">
		<constructor-arg>
			<ref bean="list"/>
		</constructor-arg>
	</bean>
</beans>
