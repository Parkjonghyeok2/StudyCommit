<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 객체의 이름은 소문자 클래스의 이름은 대문자 -->
	<!-- bean 태그에서 생성자와 관련된 정보를 명시하지 않을 경우 기본 생성자를 명시해야함 -->
	<bean name="collectionEx" class="week03.CollectionEx">
		<constructor-arg>
			<list>
				<bean class="common.SmsSender" />
			<!-- ref 객체 태그를 이용하여 전달받음 -->
				<ref bean="smsSend1" />
				<ref bean="smsSend2" />
			<!-- 제네릭 변수에 들어갈 식별자가 없는 임의 객체를 전달가능 -->
			</list>
		</constructor-arg>
	</bean>

	<bean name="smsSend1" class="common.SmsSender" />
	<bean name="smsSend2" class="common.SmsSender" />
</beans>
