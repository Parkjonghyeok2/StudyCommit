<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-4.3.xsd">
		
	<bean id="list" class="java.util.LinkedList" />
	<bean id="book" class="etc.Book" scope="prototype" init-method="inputBook" />
	<bean id="bookAdvice" class="etc.BookAdvice" />
	<bean id="bookManager" class="etc.BookManager">
		<constructor-arg>
			<ref bean="list" />
		</constructor-arg>
	</bean>

	<aop:config>
		<aop:aspect id="aspect1" ref="bookAdvice">
			<aop:pointcut id="pointcut1" expression="execution(* etc.BookManager.*(..))" />
			<aop:before pointcut-ref="pointcut1" method="log" />
			<aop:after-returning pointcut-ref="pointcut1" returning="bookList" method="printBookList" />
		</aop:aspect>
	</aop:config>
</beans>
