<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springfx`ramework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<bean 
class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
<property name = "location">
	<value> file:XML/homeworkResolve/num.properties</value>
</property>
</bean>		

<bean id="list" class = "java.util.LinkedList"/>
<!-- stdInfo는 생성 될 때 마다 새로운 객체로 생성되야 하므로 싱글톤을 피하기 위해 prototype으로 지정 -->
<bean id = "stdInfo" class="homeworkResolve.StdInfo" scope="prototype" init-method = "inputInfo"/>

<bean id = "stdManag" class = "homeworkResolve.StdManager" destroy-method = "printStdInfo">
	<!-- Required 어노테이션으로 지정된 프로퍼티는 무조건 xml에서 지정 해줘야함 -->
	<property name = "stdCnt" value="${numStudents}"/>
	<!-- 생성자를 통해서 list 자바빈을 주입시킨다 -->
	<constructor-arg>
		<ref bean = "list"/>
	</constructor-arg>
	
</bean>
</beans>
